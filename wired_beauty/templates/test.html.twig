{% extends 'base.html.twig' %}

{% block title %} Home {% endblock %}

{% block body %}
    <form class="mt-5 text-center" action="{{ path('upload-excel-file') }}" method="post" enctype="multipart/form-data">

        <input type="hidden" name="token" value="{{ csrf_token('upload') }}" />

        <div>
            <label for="excelFile">File to upload:</label>
            <input type="file" name="excelFile" id="excelFile">
        </div>
        <div>
            <button class="mt-3" type="submit">Send</button>
        </div>
        {% if error is defined %}
            {% if error %}
                <label class="text-danger pt-3">{{ error }}</label>
            {% endif %}
        {% endif %}
    </form>
{% endblock %}
